<Window x:Class="HouseInventory.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HouseInventory"
        mc:Ignorable="d"
        Title="AddItem" Height="787" Width="477" Background="#FAFAF9">
    <Grid Background="#FAFAF9" Margin="10,14,0,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="715*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Border Background="#E9E9E7" CornerRadius="20" Padding="36" Margin="32,10,32,10" Grid.RowSpan="2">
            <StackPanel Margin="0,-26,-1,-12">

                <!-- Item Name -->
                <TextBlock Text="Add New Item"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="#FF8CA07B" HorizontalAlignment="Center" Height="40" Margin="0,15,0,0"/>

                <!-- Item Name -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14" Height="85">
                    <TextBlock Text="Item Name" Foreground="#333333" FontWeight="SemiBold" Margin="0,20,0,5"/>
                    <TextBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" Padding="10,0" FontSize="15"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Description" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" Padding="10,0" FontSize="15"/>
                </StackPanel>

                <!-- Category -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Category" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" FontSize="15">
                        <ComboBoxItem Content="Category 1"/>
                        <ComboBoxItem Content="Category 2"/>
                    </ComboBox>
                </StackPanel>

                <!-- Purchase Date -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Purchase Date" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" FontSize="15"/>
                </StackPanel>

                <!-- Location -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Location" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" FontSize="15"/>
                </StackPanel>

                <!-- Quantity and Value -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                    <StackPanel  Margin="0,0,8,0">
                        <TextBlock Text="Quantity" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" Padding="10,0" FontSize="15"/>
                    </StackPanel>
                    <StackPanel  Margin="8,0,0,0">
                        <TextBlock Text="Value" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5" Height="17" Width="29"/>
                        <TextBox Height="36" Background="#FFFFFF" Foreground="#333333" BorderBrush="#E9E9E7" BorderThickness="1" Padding="10,0" FontSize="15" Width="58"/>
                    </StackPanel>
                </StackPanel>

                <!-- Image Upload -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,14">
                    <TextBlock Text="Image Upload" Foreground="#333333" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Button  Cursor="Hand" Content="Select an image"
                            Height="36"
                            Background="#8CA07B"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="Transparent"
                            FontSize="15"
                          />
                </StackPanel>

                <!-- Save and Cancel Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,28,0,0">
                    <Button Content="Cancel"  Cursor="Hand"
                            Width="130"
                            Height="40"
                            Background="#D99163"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="16"
                            BorderBrush="Transparent"
                            Margin="0,0,14,0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Save" Cursor="Hand"
        Width="130"
        Height="40"
        Background="#FF4A7039"
        Foreground="White"
        FontWeight="Bold"
        FontSize="16"
        BorderBrush="Transparent">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
