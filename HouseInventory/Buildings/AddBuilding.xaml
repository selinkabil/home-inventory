<Window x:Class="HouseInventory.Buildings.AddBuilding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Building" Height="265" Width="392"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFDFD">

    <Border Background="#E9E9E7" CornerRadius="20" Padding="36" Margin="20">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="124">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <StackPanel >
                <!-- Item Name -->
                <Label Content="Building Name:"  />
                <TextBox x:Name="BuildingNameTextBox" Grid.Row="2" Height="30" Margin="0,0,0,10"/>

            </StackPanel>
            <!-- Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SaveButton" Content="Save" Width="100" Height="35" Margin="0,0,10,0"
             Background="#8CA07B" Foreground="White" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="35"
             Background="#D99163" Foreground="White" Click="CancelButton_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
