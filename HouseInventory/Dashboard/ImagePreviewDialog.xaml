<Window x:Class="HouseInventory.Dashboard.ImagePreviewDialog"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Confirm Image" Height="450" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Use this image?" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <Image x:Name="PreviewImage" Height="300" Stretch="Uniform" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="YesButton" Content="Yes" Width="100" Margin="5" Click="YesButton_Click"/>
                <Button x:Name="NoButton" Content="No" Width="100" Margin="5" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>